<%- extend('../base_admin') -%>

  <div class="row">
    <div class="col-xl">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bx bx-plus me-1"></i>
            Modifier une stage
          </h5>
          <a 
            href="<%= routedebase %>/stage_management/stage_list" 
            class="dt-button btn btn-outline-secondary">
            <span>
              Liste des stages
            </span>
          </a>
        </div>
        <div class="card-body">
          <form method="post" action="<%= routedebase %>/stage_management/edit_stage/<%= stage_id %>">
            <% if (locals.error) { %>
              <div class="alert alert-danger">
                <i class="bx bx-error me-1"></i>
                <%= error %>
              </div>
            <% } %>
            <div class="mb-3 row">
              <div class="col-md-12">
                <label class="form-label" for="label">Libell√©</label>
                <div class="input-group input-group-merge">
                  <span id="label_icon" class="input-group-text"><i class="bx bx-label"></i></span>
                  <input type="text" id="label" name="label" class="form-control" placeholder="Ofidrop" required
                    aria-label="ACME Inc." aria-describedby="label_icon" 
                    value="<% if (locals.rbody) { %><%= rbody.label %><% } else { %><%= stage.label %><% } %>"/>
                </div>
              </div>
            </div>
            <div class="mb-3 row justify-content-center">
              <div class="col-md-12"><label class="form-label" for="description">Description</label>
                <div class="input-group input-group-merge">
                  <span id="description_icon" class="input-group-text"><i class="bx bx-comment"></i></span>
                  <textarea id="description" name="description" class="form-control"
                    placeholder="Hi, Do you have a moment to talk Joe?"
                    aria-label="Hi, Do you have a moment to talk Joe?"
                    aria-describedby="description_icon"><% if (locals.rbody) { %><%= rbody.description %><% } else { %><%= stage.description %><% } %></textarea>
                </div>
              </div>

            </div>
            <button type="submit" class="btn btn-primary">
              <i class="bx bx-send me-1"></i>
              Soumettre
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>